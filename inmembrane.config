  ## Gram- **receptor-like / surface-exposed** Pfams
  # Many of these are experimentally used as phage receptors (porins, TonB-dependent
  # receptors, autotransporters), others are generic OM β-barrels or OM factors.
  'hmmer_pfam_gram_neg': [
      # Classical general diffusion porins
      'PF00267',  # Porin_1 – trimeric OM porins (OmpF/OmpC family), well-known phage receptors
      'PF02530',  # Porin_2 – alternative porin family (e.g. OmpG-like, OM channels)
      'PF01459',  # LamB – maltoporin / LamB-type porins, classic phage λ receptor family

      # TonB-dependent receptors (siderophore / nutrient receptors, frequent phage targets)
      'PF00593',  # TonB_dep_Rec – N-terminal plug / periplasmic region of TonB-dependent receptors
      'PF07715',  # TonB_dep_Rec_b-barrel – C-terminal β-barrel of TonB-dependent receptors

      # Generic OM β-barrel scaffolds
      'PF13505',  # OMP_b-brl – generic OM β-barrel domain (many OM receptors and channels)
      'PF01103',  # Omp85 – BamA / TamA OM assembly proteins with large surface loops

      # OmpA / OmpX / OmpW families
      'PF00691',  # OmpA – OM protein family; several members are phage receptors or adhesins
      'PF03922',  # OmpW – small OM β-barrel, surface exposed; sometimes implicated in interactions

      # Autotransporter β domains (Type Va / Vc secretion; surface adhesins, invasins)
      'PF03797',  # Autotransporter beta-domain – Type Va autotransporters, large exposed passengers
      'PF11924',  # IAT_beta – inverse autotransporter β-domain (intimin/invasin-like proteins)
      'PF03895',  # YadA_anchor – trimeric autotransporter anchor (YadA-like adhesins)

      # Secretins and usher pores (large OM channels often decorated by extracellular structures)
      'PF00263',  # Secretin – OM secretins (Type II/III secretion, type IV pilus secretins)
      'PF00577',  # Fimbrial_usher – chaperone-usher OM pore for fimbriae/pili assembly

      # Efflux OM factors
      'PF02321',  # OprM – RND efflux OM factor (OprM-like), large OM channel

      # Other OM β-barrel-associated families frequently surface-exposed
      'PF13568',  # OMP_b-brl_2 – related OM β-barrel family (OmpX/OmpW-like variants)
      'PF07244',  # DUF1430 – β-barrel associated with OM proteins in Gram- bacteria (often annotated as OM)
      'PF04390',  # LptD – OM component of LPS transport; large surface-exposed β-barrel
  ],

